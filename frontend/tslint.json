{
  "extends": "tslint:recommended",
  "rules": {
    "array-type": [true, "array"],
    "arrow-return-shorthand": true,
    "file-name-casing": [true, { ".tsx": "pascal-case", ".ts": "camel-case" }],
    "max-line-length": {
      "options": [120]
    },
    "no-consecutive-blank-lines": [true, 2],
    "no-console": [false],
    "quotemark": [true, "single", "jsx-double"],
    "semicolon": [true, "always"],
    "no-trailing-whitespace": [true, "ignore-blank-lines"],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-rest-spread",
      "check-type",
      "check-typecast",
      "check-type-operator",
      "check-preblock",
      "check-postbrace"
    ]
  }
}
